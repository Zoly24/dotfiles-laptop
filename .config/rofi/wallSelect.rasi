configuration {
    modi:"drun";
    show-icons:                  true;
    drun-display-format:         "{name}";
    font:                        "FiraCode Nerd Font";
    
    //hover-select:				 true;
	//me-select-entry:			 "";
	//me-accept-entry:			 "MousePrimary";
}

//----- Global Properties -----//

@import "colors.rasi"

//----- Main Window -----//

window {
    enabled:                     true;
    fullscreen:                  false;
    width:                       60%;
    transparency:                "real";
    cursor:                      "default";
    spacing:                     0px;
    padding:                     0px;
    border:                      4px;
    border-radius:               10px;
    border-color:                @primary;
    background-color:            transparent;
}

//----- Main Box -----//

mainbox {
    enabled:                     true;
    children:                    [ "listview" ];
    background-color:            @surface;
}

//----- Listview -----//

listview {
    enabled:                     true;
    columns:                     4;
    lines:                       1;
    spacing:                     50px;
    padding:                     50px 50px;
    cycle:                       true;
    dynamic:                     false;
    scrollbar:                   false;
    layout:                      vertical;
    reverse:                     true;
    fixed-height:                true;
    fixed-columns:               true;
    cursor:                      "default";
    background-color:            transparent;
    text-color:                  @on-surface;
}

//----- Elements -----//

element {
    enabled:                     true;
    orientation:                 horizontal;
    spacing:                     0px;
    padding:                     5px;
    border-radius:               20px;
    border:                     5px;
    border-color:               transparent;
    cursor:                      pointer;
    background-color:            transparent;
    text-color:                  @on-surface;
}

@media(max-aspect-ratio: 1.8) {
    element {
        orientation:             vertical;
    }
}

element selected.normal {
    background-color:            @primary;
    text-color:                  @on-primary;
    border-color:               @primary;
}

element-text selected.normal {
    text-color: @on-primary;
}

element-icon {
    size:                        33%;
    cursor:                      inherit;
    border-radius:               10px;
    background-color:            transparent;
    text-color:                  inherit;
}

element-text {
    enabled: true;
    vertical-align:              0.5;
    horizontal-align:            0.5;
    padding:                     0px;
    cursor:                      inherit;
    background-color:            transparent;
    text-color:                  @on-surface;
}
